{
  "compilerOptions": {
    "noImplicitReturns": true,
    "strict": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["dom", "es6"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*",
        "src/server/types/*"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "./test/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
